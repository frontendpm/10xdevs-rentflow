---
import OnboardingLayout from "@/layouts/OnboardingLayout.astro";
import OnboardingWizard from "@/components/features/onboarding/onboarding-wizard";

export const prerender = false;
---

<OnboardingLayout title="Kreator startu">
  <OnboardingWizard client:load />
</OnboardingLayout>

<script>
  async function checkAuth() {
    const token = localStorage.getItem("rentflow_auth_token");

    if (!token) {
      window.location.href = "/login?redirect=/onboarding";
      return;
    }

    try {
      const response = await fetch("/api/users/me", {
        headers: {
          Authorization: `Bearer ${token}`,
          "Content-Type": "application/json",
        },
      });

      if (!response.ok) {
        localStorage.removeItem("rentflow_auth_token");
        localStorage.removeItem("rentflow_refresh_token");
        window.location.href = "/login?redirect=/onboarding";
        return;
      }

      const user = await response.json();

      if (user.role !== "owner") {
        window.location.href = "/dashboard";
      }
    } catch (error) {
      console.error("Auth check error:", error);
      window.location.href = "/login?redirect=/onboarding";
    }
  }

  checkAuth();
</script>
